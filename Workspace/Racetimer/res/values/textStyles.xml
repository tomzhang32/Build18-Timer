<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Wrapper">
      <item name="android:layout_width">match_parent</item>
      <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrapper.Margins">
      <item name="android:layout_marginTop">6dp</item>
      <item name="android:layout_marginLeft">6dp</item>
      <item name="android:layout_marginBottom">6dp</item>
      <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="ClickableCard" parent="Wrapper.Margins">
      <item name="android:clickable">true</item>
      <item name="android:background">@drawable/bg_card</item>
    </style>
    
    <style name="TimerLabel" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="ButtonLabel" parent="TimerLabel">
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Timer" parent="TimerLabel">
        <item name="android:textSize">40sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">false</item>
    </style>

    <style name="SmallTimerLabel" parent="TimerLabel">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SmallTimer" parent="Timer">
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="LightIcon" parent="">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
</resources>
